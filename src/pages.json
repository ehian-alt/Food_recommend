{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "九院美食推荐"
			}
		},
		{
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/forum/forum",
			"style": {
				"navigationBarTitleText": "论坛"
			}
		},
		{
			"path": "pages/recommend/recommend",
			"style": {
				"navigationBarTitleText": "推荐",
				"onReachBottomDistance": 100
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		}
	],
	"tabBar": {
		"backgroundColor": "#ffffff",
		"color": "#000000",
		"selectedColor": "#ffb6c1",
		"position": "bottom",
		"list": [
			{
				"pagePath": "pages/home/home",
				"text": "首页",
				"iconPath": "static/icons/home.png",
				"selectedIconPath": "static/icons/home-fill.png"
			},
			{
				"pagePath": "pages/recommend/recommend",
				"text": "榜单",
				"iconPath": "static/icons/like.png",
				"selectedIconPath": "static/icons/like-fill.png"
			},
			{
				"pagePath": "pages/forum/forum",
				"text": "论坛",
				"iconPath": "static/icons/forum.png",
				"selectedIconPath": "static/icons/forum-fill.png"
			},
			{
				"pagePath": "pages/mine/mine",
				"text": "我的",
				"iconPath": "static/icons/user.png",
				"selectedIconPath": "static/icons/user-fill.png"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "九院美食推荐",
		"navigationBarBackgroundColor": "#ffb6c1",
		"backgroundColor": "#efefef",
		"backgroundTextStyle": "dark"
	},
	"subPackages": [
		{
			"root": "pages/subpages",
			"pages": [
				{
					"path": "upInfo/upInfo",
					"style": {
						"navigationBarTitleText": "个人信息设置"
					}
				},
				{
					"path": "likes/likes",
					"style": {
						"navigationBarTitleText": "我的收藏"
					}
				},
				{
					"path": "dishInfo/dishInfo",
					"style": {
						"navigationBarTitleText": "美食信息"
					}
				},
				{
					"path": "comInfo/comInfo",
					"style": {
						"navigationBarTitleText": "评论详情"
					}
				}
			]
		}
	]
}